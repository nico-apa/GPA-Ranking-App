<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GroupProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GroupProject" parent="Base.Theme.GroupProject" />

    <style name="header" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:textSize">17sp</item>
        <item name = "android:gravity">right</item>
        <item name = "android:paddingTop">8dp</item>
        <item name = "android:paddingStart">12dp</item>
        <item name = "android:paddingEnd">12dp</item>
        <item name = "android:background">#2196F3</item>
        <item name = "android:textColor">#FFFFFF</item>
    </style>

    <style name="titles" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textSize">32sp</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:layout_marginTop">20dp</item>
        <item name = "android:layout_centerHorizontal">true</item>
        <item name = "android:layout_below">@+id/header</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name="labels" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textSize">22sp</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:background">#DDDDDDDD</item>
        <item name = "android:layout_marginStart">20dp</item>
        <item name = "android:minWidth">150dp</item>
        <item name = "android:layout_marginTop">80dp</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name="inputs" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textSize">22sp</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_marginEnd">20dp</item>
        <item name = "android:layout_alignParentEnd">true</item>
    </style>

    <style name="buttons" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textSize">28sp</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:backgroundTint">#6A42B1</item>
        <item name = "android:textColor">@color/white</item>
    </style>

    <style name="table_head" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:textSize">18sp</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:background">#d3d3d3</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name="table_row" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:gravity">center</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="table_cell" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:text"> </item>
        <item name = "android:padding">10dp</item>
        <item name = "android:background">@drawable/table_row_border</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="table_buttons" parent="@style/TextAppearance.AppCompat" >
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">60dp</item>
        <item name = "android:textSize">28sp</item>
        <item name = "android:backgroundTint">#6A42B1</item>
        <item name = "android:textColor">@color/white</item>
    </style>

</resources>