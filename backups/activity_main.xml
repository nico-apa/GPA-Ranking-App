<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:gravity="right"
        android:textSize="17sp"
        android:id="@+id/header"
        android:paddingTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd = "12dp"
        android:background="#2196F3"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="32sp"
        android:layout_below="@+id/header"
        android:text="GPA Title Race"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:minWidth="120dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp"
        android:background="#DDDDDDDD"
        android:layout_below="@+id/title"
        android:text="Enter Name :"
        android:id="@+id/label_Name"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:minWidth="120dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@color/black"
        android:hint="*Required*"
        android:id="@+id/input_Name"
        android:layout_toEndOf="@+id/label_Name"
        android:layout_alignBottom="@+id/label_Name"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp"
        android:background="#DDDDDDDD"
        android:text="Enter Email :"
        android:id="@+id/label_Email"
        android:layout_below="@+id/label_Name"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/label_Name"
        android:layout_alignEnd="@+id/label_Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:hint="*Required*"
        android:id="@+id/input_Email"
        android:layout_below="@+id/label_Name"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/label_Email"
        android:layout_alignBottom="@+id/label_Email"
        android:layout_alignEnd="@id/input_Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp"
        android:background="#DDDDDDDD"
        android:text="Enter Color : "
        android:id="@+id/label_Color"
        android:layout_below="@+id/label_Email"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@+id/label_Email"
        android:layout_alignEnd="@+id/label_Email" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:entries="@array/color_options"
        android:id="@+id/input_color"
        android:layout_below="@+id/label_Email"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/label_Color"
        android:layout_alignBottom="@+id/label_Color"
        android:layout_alignEnd="@id/input_Email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:padding="10dp"
        android:layout_below="@+id/label_Color"
        android:textSize="28sp"
        android:backgroundTint="#6A42B1"
        android:text="Next Page"
        android:id="@+id/next_page" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:backgroundTint="#6A42B1"
        android:layout_toEndOf="@+id/next_page"
        android:layout_alignBottom="@+id/next_page"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:text="Rankings"
        android:id="@+id/rankings_page" />

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_marginTop="700dp"
        android:orientation="horizontal"
        android:background="#FDDD"
        android:id="@+id/ad_view"
        android:layout_gravity="center"
        />

</RelativeLayout>
